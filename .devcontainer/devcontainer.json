{
  "name": "Python",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "latest",
      "profile": "minimal"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff",
        "anthropic.claude-code"
      ]
    }
  },
  "postCreateCommand": ".devcontainer/postCreateCommand.sh && echo 'postCreateCommand completed' > /tmp/create-completed.log"
}